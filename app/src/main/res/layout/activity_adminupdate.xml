<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminupdate"
    android:orientation="vertical"
    android:background="@color/graylight"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradientbackground"
        android:orientation="vertical"
        android:padding="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Admin Profile"
            android:textColor="#fff"
            android:textSize="31sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please make sure the correct value for Gender is Selected"
            android:textColor="#fff"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/admin_collegeid"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/edit_text_style"
                    android:drawableLeft="@drawable/ic_card_travel_black_24dp"
                    android:hint="Enter Updated Institute ID"
                    android:inputType="text"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/admin_name"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/edit_text_style"
                    android:drawableLeft="@drawable/ic_person_pin_black_24dp"
                    android:hint="Enter Updated Name"
                    android:inputType="textPersonName"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/admin_mail1"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/edit_text_style"
                    android:drawableLeft="@drawable/ic_person_outline_blak_24dp"
                    android:hint="Enter Email"
                    android:inputType="textEmailAddress"
                    android:padding="10dp" />

                <Button
                    android:id="@+id/admin_age"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_style"
                    android:drawableLeft="@drawable/ic_child_care_black_24dp"
                    android:hint="Click to Enter Date of Birth"
                    android:inputType="number"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Choose Gender"
                    android:textAlignment="center"
                    android:layout_marginTop="30sp"/>

                <Spinner
                    android:id="@+id/admin_gender1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:entries="@array/gender"
                    android:layout_marginTop="15sp">

                </Spinner>

                <EditText
                    android:id="@+id/admin_phone"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/edit_text_style"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/admin_design"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/edit_text_style"
                    android:drawableLeft="@drawable/ic_arrow_graph_up_right"
                    android:hint="Enter Designation"
                    android:inputType="text"
                    android:padding="10dp" />

                <Button
                    android:id="@+id/admin_button"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/buttonstylenewpink"
                    android:drawableRight="@drawable/ic_send_black_24dp"
                    android:text="Update"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/admin_pass"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20sp"
                    android:background="@drawable/buttonstylenewpink"
                    android:drawableRight="@drawable/ic_send_black_24dp"
                    android:text="Edit Password"
                    android:textColor="#fff" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>